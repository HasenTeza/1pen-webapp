/* pages/tj_fenqi/tj_fenqi.wxss */
.tj_fenqi{
  width: 100%;
  height: 100%;
  /* background-color: red; */
  background-image: url(https://yp.dxshuju.com/api/public/static/img/fq.jpg);
  background-repeat: no-repeat;
  background-position: -120rpx -20rpx;
  background-size: 117% 40%;
  position: relative;
}
.content{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 70%;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
}
.text1{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  padding-top: 30rpx;
  color: #777272;
}
.text2{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 24rpx;
  /* padding: 30rpx 0; */
}
.input{
  margin: 10rpx auto;
  /* background-color: yellow; */
  width: 80%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  position: relative;
}
.img{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 60rpx;
  height: 80rpx;
}
.input input{
  margin-left: 20%;
  width: 80%;
  height: 100%;
  display: block;
  font-size: 28rpx;
  line-height: 100rpx;
  /* text-indent: 100rpx; */
}
.text3{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #676464;
}
.btn{
  margin: 20rpx auto;
  width: 60%;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #3ae346;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
  box-shadow: 0px 1px 3px 0px #676464;
}