/* //搜索 */
.searchBox{
  width: 100%;
  padding: 5rpx 0;
  background-color: #fc6f68;
}
.search {
  width: 94%;
  height: 60rpx;
  background-color: #fff;
  border: 1rpx solid #fc6f68;
  border-radius: 10rpx;
  margin: 0 auto;
  position: relative;
}
.searchcion{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.searchInput{
  display: block;
  height: 60rpx;
  padding-left: 60rpx;
  font-size: 32rpx;
  line-height: 56rpx;
}
.header{
  width: 96%;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  padding-left: 4%;
}
.content{
  width: 90%;
  padding:2% 5%;
}
.content text{
  display: inline-block;
  font-size: 28rpx;
  line-height: 36rpx;
  text-align: center;
  padding: 10rpx 30rpx;
  margin: 10rpx 20rpx;
  background-color: #ededed;
  border-radius: 10rpx;
  color: #8d8d8d;
}
.shangpin{
  width: 90%;
  height: 200rpx;
  padding: 2% 5%;
  border-bottom: 1rpx solid #d3d3d3;
}
.s_left{
  width: 30%;
  height: 200rpx;
  float: left;
}
.s_img{
  width: 100%;
  height: 100%;
}
.s_right{
  float: left;
  padding-left: 20rpx;
  width: 60%;
  height: 200rpx;
}
.title{
  display: block;
  margin-top: 20rpx;
  height: 120rpx;
  font-size: 28rpx;
  line-height: 42rpx;

}
.text{
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 32rpx;
}
.text text:nth-child(1){
  padding-left: 10rpx;
  color: #fc6f68;
}
.text text:nth-child(2){
  padding-left: 20rpx;
  color: #888;
  font-size: 24rpx;
  text-decoration:line-through;
}