.my_coupon{
  width: 100%;
  min-height:100%;
  background-color: #f7f7f7;
}
.nav{
  width: 100%;
  height: 100rpx;
}
.text{
  float: left;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  padding-left:40rpx;
}
.text1{
  border-bottom: 5rpx solid red; 
}
.content{
  width: 100%;
}
.ul{
  width: 94%;
  padding: 3%;
  padding-top: 0;
}
.li{
  width: 90%;
  padding: 3% 5%;
  margin-top: 2%;
  border: 1rpx dotted #999;
  border-radius: 10rpx;
  background-color: #fff;
  position: relative;
}
.left{
  display: inline-block;
  width: 70%;
}
.left text{
  display: block;
  width: 100%;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #999;
}
.left .title{
  font-size: 36rpx;
  line-height: 64rpx;
  font-weight: 600;
  color: #000;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.right{
  position: absolute;
  right: 40rpx;
  top: 50rpx;
  width: 70%;
  /* height: 100%; */
  text-align: right;
}
.r_text{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999;
  overflow: hidden;
}
.r_text:nth-child(1){
  color: red;
}
.r_text text{
  font-size: 64rpx;
}