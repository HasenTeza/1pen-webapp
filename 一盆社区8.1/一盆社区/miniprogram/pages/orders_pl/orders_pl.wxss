/* pages/orders/orders_pl/orders_pl.wxss */

page {
  background-color: #fff;
}

.pinglun {
  width: 100%;
}

.header {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #ededed;
}

.header_img {
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin: 15rpx;
}

.hao {
  float: left;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0 10rpx;
}

.hao_img {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 10rpx;
}

.hao text {
  float: left;
  color: #aaa;
}

.inputBox {
  padding-top: 10rpx;
  width: 90%;
  height: 400rpx;
  margin: 0 5%;
  border-bottom: 1rpx solid #e2e2e2;
  position: relative;
}

.inputBox textarea {
  width: 100%;
  height: 50%;
  font-size: 32rpx;
  line-height: 36rpx;
}
.tj_tupianall{
 position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  z-index: 10
}
.tupian_zs{
  float: left;
  margin-right: 3rpx;
  width: 0;
  height: 180rpx;
}
.tupian_zs1{
  width: 180rpx;
}
.tupian_zs image{
   width: 180rpx;
  height: 180rpx;
}
.tj_tupian {
  float: left;
  width: 180rpx;
  height: 180rpx;
  border: 1rpx dashed #bababa;
  /* margin-top: -200rpx; */
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  color: #bababa;
 
}

.tj_tupian image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 50rpx;
  margin-top: 20rpx;
}

.niming {
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #b6b6b6;
  border-bottom: 20rpx solid #d6d2d26b;
}

.niming .left {
  float: left;
  margin-left: 20rpx;
}

.left image {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 10rpx;
}

.niming .right {
  float: left;
  margin-left: 50rpx;
  color: #b6b6b6;
}

.dianpu {
  width: 100%;
}

.title {
  width: 100%;
  height: 100rpx;
}

.title image {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx;
  margin-right: 0;
}
.title text{
  float: left;
  margin-left: 20rpx;
  font-size: 32rpx;
  line-height: 95rpx;
}
.xingxing{
  width: 100%;
  height: 100rpx;
}
.xing{
  float: left;
  margin:0 1rpx;
  width: 40rpx;
  height: 40rpx;
}
.btn{
  margin: 100rpx auto;
  width: 50%;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #62b900;
  color: #fff;
}